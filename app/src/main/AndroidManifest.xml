<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.seu.alumni">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- qrcode -->

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- 欢迎页 -->
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 登录 -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/ActivityTheme" />

        <!-- 注册 -->
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/ActivityTheme" />

        <!-- 主页面 -->
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/ActivityTheme" />

        <!-- 人脉 START -->
        <activity
            android:name=".activity.AddFriendsActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.NewFriendsActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <!-- 人脉 END -->


        <!-- 实时通信模块、推送 START -->
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <!-- 实时通信模块、推送 END -->


        <!-- 反馈组件 START -->
        <activity
            android:name="com.avos.avoscloud.feedback.ThreadActivity"
            android:theme="@style/ActivityTheme" />
        <!-- 反馈组件 END -->


        <!-- test START -->
        <activity
            android:name="test.dwj.DecodeActivity"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="test.dwj.ScanActivity"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="test.dwj.GenerateActivity"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="test.dwj.ResultActivity"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="test.zzk.DeveloperActivity"
            android:theme="@style/ActivityTheme" />
        <!-- test END -->

        <activity
            android:name=".activity.CircleTopicActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.UserBasicInfoActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.EditDetailedInfoActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.MyCollectionActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.MyMessageActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.MyQrCodeActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.MyStatusActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity
            android:name=".activity.my.SettingActivity"
            android:theme="@style/ActivityThemeSwipeBack" />
        <activity android:name=".activity.DynamicTextActivity"
            android:theme="@style/ActivityThemeSwipeBack"/>
    </application>

</manifest>
